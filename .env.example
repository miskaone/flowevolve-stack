# ===========================================
# GENERAL CONFIGURATION
# ===========================================
TIMEZONE=America/New_York
ACME_EMAIL=your-email@example.com

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
N8N_HOST=n8n.flowevolve.ai
SUPABASE_HOST=supa.flowevolve.ai
SITE_URL=https://supa.flowevolve.ai
ADDITIONAL_REDIRECT_URLS=

# ===========================================
# SMTP CONFIGURATION (Gmail)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SENDER=your-email@gmail.com
SMTP_ADMIN_EMAIL=your-email@gmail.com

# ===========================================
# N8N CONFIGURATION
# ===========================================
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=

# ===========================================
# POSTGRES CONFIGURATION
# ===========================================
POSTGRES_PASSWORD=your-super-secure-postgres-password
POSTGRES_PORT=5432

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRY=3600

# ===========================================
# SUPABASE API KEYS
# ===========================================
# Generate these using the Supabase JWT generator or online tool
# ANON_KEY: JWT with role=anon
# SERVICE_ROLE_KEY: JWT with role=service_role
ANON_KEY=
SERVICE_ROLE_KEY=

# ===========================================
# SUPABASE DASHBOARD
# ===========================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-dashboard-password
STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project

# ===========================================
# SUPABASE INTERNAL SECRETS
# ===========================================
# Generate with: openssl rand -base64 64
SECRET_KEY_BASE=
# Generate with: openssl rand -hex 32
VAULT_ENC_KEY=
# Generate with: openssl rand -base64 32
LOGFLARE_API_KEY=

# ===========================================
# SIGNUP CONFIGURATION
# ===========================================
DISABLE_SIGNUP=false
ENABLE_EMAIL_AUTOCONFIRM=false
